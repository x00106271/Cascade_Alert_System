<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    tools:context="com.cascadealertsystem.Pre_verify">

    <TextView android:text="Your details have been recorded and await verification by the area administrator.\n
    This application requires users to be verified before use.\n
    A text message will be sent to your mobile when you become verified and you may login then.\n\n
    Thank you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/pre_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_below="@id/pre_text"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:id="@+id/pre_button"/>

</RelativeLayout>
